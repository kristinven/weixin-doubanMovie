/* pages/movie-cast/movie-cast.wxss */
@import '../movie-detail/movie-detail';

.summary .born-place,
.summary .birthday,
.summary .professions{
  font-size: 26rpx;
  color: #9e9e9e;
  font-weight: 500;
  line-height: 1.3;
}
.fans {
  padding: 10rpx 10rpx;
  margin-right: 30rpx;
  border: 2rpx solid #9e9e9e;
  box-shadow: 2rpx 2rpx 2rpx 2rpx #cecece;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #9e9e9e;
  text-align: center;
}
.works {
  width: 100%;
}
.works .title{
  display: inline-block;
  font-size: 30rpx;
  color: #9e9e9e;
  margin-bottom: 10rpx;
}
.avatar-scroll .name {
  color: #3377AA;
}
.avatar-scroll .score {
  color: #E09015;
}
