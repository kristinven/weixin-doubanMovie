/* pages/movie-rating/movie-rating.wxss */
.rating{
  display: flex;
  flex-direction: row;
  margin: 10rpx 0;
}
.rating-star{
  width: 55px;
  height: 11px;
  background-image: url('http://static.nipic.com/images/works_star_png24.png');
  background-size: cover;
  background-repeat: no-repeat;

}
.allstar0{
  background-position: 0 0;
}
.allstar1{
  background-position: 0 -11px;
}
.allstar2{
  background-position: 0 -22px;
}
.allstar3{
  background-position: 0 -33px;
}
.allstar4{
  background-position: 0 -44px;
}
.allstar5{
  background-position: 0 -55px;
}
.allstar6{
  background-position: 0 -66px;
}
.allstar7{
  background-position: 0 -77px;
}
.allstar8{
  background-position: 0 -88px;
}
.allstar9{
  background-position: 0 -99px;
}
.allstar10{
  background-position: 0 -100px;
}
.rating-average{
  font-size: 20rpx;
  color: #9e9e9e;
  margin-left: 20rpx;
}