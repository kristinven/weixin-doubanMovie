/* pages/search/search.wxss */
/* search-movie style  */
.search-inp{
  font-size: 28rpx;
  color: #333;
  flex: 1;
}
.search-clear{
  margin-right: 20rpx;
}
.search-cancel{
  font-size: 26rpx;
  color: #9e9e9e;
}
/* search-list style  */
.search-list{
  margin-top: 120rpx;
  width: 100%;
}
.search-item{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 160rpx;
  padding: 15rpx 30rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #ccc;
  background: #fff;
}
.search-item .poster{
  flex-shrink: 0;  /* 空间不足时，项目不缩小*/ 
  width: 90rpx;
  height: 130rpx;
  margin-right: 20rpx;
}
.search-item .info .title{
  width: 260px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 38rpx;
  font-weight: 600;
  color: #4a4a4a;
}
.search-item .info .desc{
  width: 280px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 32rpx;
  color: #9e9e9e;
}

