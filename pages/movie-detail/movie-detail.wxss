/* pages/movie-detail/movie-detail.wxss */
@import "../movie-rating/movie-rating.wxss";

.poster-session {
  width: 100%;
  height: 500rpx;
  background: #e9e9e9;
}
.poster-session .poster {
  width: 320rpx;
  height: 420rpx;
  margin: 40rpx auto;
}
.poster-session image{
  width: 100%;
  height: 100%;
}
.content-session {
  background: #fff;
  width: 100%;
  box-sizing: border-box;
  padding: 0 26rpx;
}
.summary {
  box-sizing: border-box;
  width: 100%;
  display: flex;
  padding: 30rpx 0;
  align-items: center;
}
.info {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.info .name {
  font-size: 46rpx;
  font-weight: 900;
  color: #4a4a4a;
  line-height: 1.8;
}
.info .genres, .info .origin-name, .info .country {
  font-size: 26rpx;
  color: #9e9e9e;
  font-weight: 500;
  line-height: 1.3;
}
.summary .rating {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 125rpx;
  height: 120rpx;
  margin-right: 20rpx;
  border: 2rpx solid #9e9e9e;
  box-shadow: 2rpx 2rpx 2rpx 2rpx #cecece;
  border-radius: 8rpx;
}
.rating .score{
  font-size: 32rpx;
  font-weight: 800;
  color: #4a4a4a;
  line-height: 2;
}
.rating .wish-count {
 font-size: 20rpx;
 color: #4a4a4a; 
}
.watch-status {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  padding: 25rpx 0;
}
.watch-status .wish-btn,
.watch-status .do-btn {
  width: 230rpx;
  height: 56rpx;
  border: 2rpx solid #de9703;
  border-radius: 6rpx;
  font-size: 30rpx;
  color: #de9703;
  text-align: center;
  line-height: 56rpx;
}
.desc {
  display: flex;
  flex-direction: column;
}
.desc .title {
  font-size: 32rpx;
  color: #9e9e9e;
}
.desc .desc-content {
  text-indent: 50rpx;
  font-size: 26rpx;
  color: #4a4a4a;
  line-height: 1.4;
}
.desc .desc-3line {
  display: block;
  height: 110rpx;
  overflow: hidden;
}
.desc .unfold {
  font-size: 24rpx;
  color: #4ED48E;
  font-weight: 500;
  line-height: 2;
}
.dire-casts {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.dire-casts .title {
  font-size: 32rpx;
  color: #9e9e9e;
  margin-bottom: 10rpx;
}
.avatar-scroll {
  width: 100%;
  white-space: nowrap;
}
.avatar-wrapper {
  vertical-align: top;
  display: inline-block;
  margin-right: 10rpx;
  width: 140rpx;
}
.avatar-wrapper .avatar {
  display: block;
  width: 140rpx;
  height: 200rpx;
}
.avatar-wrapper .name-wrapper {
  display: inline-block;
  font-size: 26rpx;
  color: #4a4a4a;
  width: 140rpx;
  height: 70rpx;
  overflow: hidden;
  white-space: normal;
  text-align: center;
}
.avatar-wrapper .name-wrapper .role {
  display: block;
  font-size: 24rpx;
  color: #9b9b9b;
}